<h2>注册帐号</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email, 'Email地址：' %></div>
  <div><%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :password, '密码：' %></div>
  <div><%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation, '再输一次密码：' %></div>
  <div><%= f.password_field :password_confirmation %></div>

  <div><%= f.label :nickname,  '用户名：' %></div>
  <div><%= f.text_field :nickname %></div>

  <div><%= f.submit "提交注册", :class=>'btn btn-primary' %></div>
<% end %>

<%= render "devise/shared/links" %>
