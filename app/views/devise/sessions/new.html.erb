<h2>登录</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email, 'Email地址：' %></div>
  <div><%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :password, '密码：'%></div>
  <div><%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, '记住我', :style=>'display:inline;' %></div>
  <% end -%>

  <div style="margin-top:10px;"><%= f.submit " 登 录 ", :class=>'btn btn-primary' %></div>
<% end %>

<%= render "devise/shared/links" %>
